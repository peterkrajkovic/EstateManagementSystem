@using GUI.Components.Client
@using static GUI.Components.Client.Model
@inject ISnackbar Snackbar
<MudDialog>
    <TitleContent>
        @MudDialog.Title
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Description" T="string" @bind-Value="Model.Description">
            Description
        </MudTextField>
        <MudTextField Label="Number" T="int" @bind-Value="Model.Number">
            Number
        </MudTextField>
        <MudPaper Elevation="1" Style="margin-top:1%;">
            <MudItem xs="12" Style="text-align: center;">
                <MudText Typo="Typo.body1">GPS positions</MudText>
            </MudItem>
            <MudGrid Style="margin-top:5px;">
                <MudItem>
                    <MudText Typo="Typo.body2"> Left Bottom Position</MudText>
                    <MudTextField Label="Width" T="double" @bind-Value="Model.X1">
                    </MudTextField>
                    <MudTextField T="double" Label="Height" @bind-Value="Model.Y1">
                    </MudTextField>
                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.body2"> Right Top Position</MudText>
                    <MudTextField T="double" Label="Width" @bind-Value="Model.X2">
                    </MudTextField>
                    <MudTextField T="double" Label="Height" @bind-Value="Model.Y2">
                    </MudTextField>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public Model.EstateModel Model { get; set; }

    private void Submit()
    {
        if (Model != null && Model.X1 != null && Model.X2 != null && Model.Y1 != null && Model.Number != null && Model.Description != null)
            MudDialog.Close(DialogResult.Ok(Model));
        else
            Snackbar.Add("All fields must be assigned.", Severity.Error);
    }

    private void Cancel() => MudDialog.Cancel();

}

