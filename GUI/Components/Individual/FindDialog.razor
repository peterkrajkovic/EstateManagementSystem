@inject ISnackbar Snackbar
<MudDialog>
    <TitleContent>
        Find Estates by GPS position
    </TitleContent>
    <DialogContent>
        <MudRadioGroup T="int" @bind-Value="Model.EstateType">
            <MudRadio Value="0">Properties</MudRadio>
            <MudRadio Value="1">Parcels</MudRadio>
            <MudRadio Value="2">All</MudRadio>
        </MudRadioGroup>
        <MudRadioGroup T="int" @bind-Value="Model.GPS">
            <MudRadio Value="0">By 1 Point</MudRadio>
            <MudRadio Value="1">By 2 Points</MudRadio>
        </MudRadioGroup>
        <MudRadioGroup T="int" @bind-Value="Model.Boundaries">
            <MudRadio Value="0">By boundaries</MudRadio>
            <MudRadio Value="1">By range</MudRadio>
        </MudRadioGroup>
     @*    <MudItem xs="2">
            <MudTooltip Text="For west width or south height please use negative number" Placement="Placement.Right">
                <MudIconButton Icon="@Icons.Material.Filled.Info" Color="Color.Primary" />
            </MudTooltip>
        </MudItem> *@
        <MudGrid>
            @if (Model.GPS == 0)
            {
                <MudItem>
                    <MudTextField Label=" width" Culture="System.Globalization.CultureInfo.CurrentCulture" T="double?" @bind-Value="Model.X1">
                </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.X1Char">
                        <MudSelectItem Value="'W'">
                        </MudSelectItem>
                        <MudSelectItem Value="'E'">
                        </MudSelectItem>
                    </MudSelect>
                    <MudTextField T="double?" Culture="System.Globalization.CultureInfo.CurrentCulture" Label="height" @bind-Value="Model.Y1">
                    </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.Y1Char">
                        <MudSelectItem Value="'S'">
                        </MudSelectItem>
                        <MudSelectItem Value="'N'">
                        </MudSelectItem>
                    </MudSelect>
                </MudItem>
            } else
            {
                <MudItem xs="6">
                    <MudText>Left Bottom Point</MudText>
                    <MudTextField Label=" width" Culture="System.Globalization.CultureInfo.CurrentCulture" T="double?" @bind-Value="Model.X1">
                    </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.X1Char">
                        <MudSelectItem Value="'W'">
                        </MudSelectItem>
                        <MudSelectItem Value="'E'">
                        </MudSelectItem>
                    </MudSelect>
                    <MudTextField T="double?" Label="height" Culture="System.Globalization.CultureInfo.CurrentCulture" @bind-Value="Model.Y1">
                    </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.Y1Char">
                        <MudSelectItem Value="'S'">
                        </MudSelectItem>
                        <MudSelectItem Value="'N'">
                        </MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="6">
                    <MudText>Right Top Point</MudText>
                    <MudTextField Label=" width" T="double?" Culture="System.Globalization.CultureInfo.CurrentCulture" @bind-Value="Model.X2">
                    </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.X2Char">
                        <MudSelectItem Value="'W'">
                        </MudSelectItem>
                          <MudSelectItem Value="'E'">
                        </MudSelectItem>
                    </MudSelect>
                    <MudTextField T="double?" Label="height" Culture="System.Globalization.CultureInfo.CurrentCulture" @bind-Value="Model.Y2">
                    </MudTextField>
                    <MudSelect T="char" @bind-Value="Model.Y2Char">
                        <MudSelectItem Value="'S'">
                        </MudSelectItem>
                        <MudSelectItem Value="'N'">
                        </MudSelectItem>
                    </MudSelect>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public FindModel Model { get; set; }

    private void Submit()
    {
        if ((Model.GPS == 0 && Model.X1 != null && Model.Y1 != null && Model.X1Char != null && Model.Y1 != null) 
           || (Model.GPS == 1 && Model.X1 != null && Model.Y2 != null && Model.X2 != null && Model.Y1 != null && Model.X1Char != null && Model.X2Char != null && Model.Y1Char != null && Model.Y2Char != null))
            MudDialog.Close(DialogResult.Ok(Model));
        else
            Snackbar.Add("All fields must be assigned.", Severity.Error);
    }



    private void Cancel() => MudDialog.Cancel();


    public class FindModel
    {
        public double? X1 { get; set; }
        public char X1Char { get; set; } = 'E';
        public double? Y1 { get; set; }
        public char Y1Char { get; set; } = 'N';
        public double? X2 { get; set; }
        public char X2Char { get; set; } = 'E';
        public double? Y2 { get; set; }
        public char Y2Char { get; set; } = 'N';
        public int GPS { get; set; }  //0- 1 point search, 1- 2point search 
        public int Boundaries { get; set;} //0-boundaries, 1 range
        public int EstateType { get; set; } //0-Property, 1-Parcel, 2-All
    }
}
